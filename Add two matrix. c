//add two matric


#include <stdio.h>

struct matrix
{
    int ar[10][10];
    int r, c;
};

typedef struct matrix Matrix;

void add_matrix(Matrix a, Matrix b)
{
    Matrix s;
    int i, j;
    printf("Input dimension of the first matrix: ");
    scanf("%d %d", &a->r, &a->c);
    printf("Input dimension of the second matrix: ");
    scanf("%d %d", &b->r, &b->c);
    if (a->r == b->r && a->c == b->c)
    {
        printf("Input elements of the first matrix: ");
        for (i = 0; i < a->r; i++)
            for (j = 0; j < a->c; j++)
                scanf("%d", &a->ar[i][j]);
        printf("\nInput elements of the second matrix: ");
        for (i = 0; i < b->r; i++)
            for (j = 0; j < b->c; j++)
                scanf("%d", &b->ar[i][j]);
        for (i = 0; i < a->r; i++)
            for (j = 0; j < a->c; j++)
                s->ar[i][j] = a->ar[i][j] + b->ar[i][j];
        printf("\n The sum of the above two matrices is: \n");
        for (i = 0; i < a->r; i++)
        {
            for (j = 0; j < a->c; j++)
                printf(" %d ", s->ar[i][j]);
            printf("\n");
        }
    }
    else
        return NULL;
}

int main()
{
    Matrix a, b;
    add_matrix(a, b);
    return 0;
}
